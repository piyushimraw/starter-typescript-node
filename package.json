{
    "name": "starter-typescript-node",
    "version": "1.0.0",
    "description": "This is the Starter for creating restful api with express using typescript ",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "dev": "nodemon",
        "start": "pm2 start ./dist/server.js",
        "prod": "npm run build && npm run start",
        "lint": "tslint -c tslint.json src/**/*.ts"
    },
    "keywords": [
        "Typescript",
        "starter",
        "node",
        "express",
        "rest-api"
    ],
    "author": "piyush",
    "license": "ISC",
    "dependencies": {
        "@types/express": "^4.16.0",
        "body-parser": "^1.18.3",
        "express": "^4.17.3",
        "mongoose": "^5.7.5",
        "nodemon": "^1.18.9",
        "pm2": "^3.2.8"
    },
    "devDependencies": {
        "husky": "^1.3.1",
        "prettier": "^1.15.3",
        "pretty-quick": "^1.8.0",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.17.0",
        "typescript": "^3.2.2"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && pretty-quick --staged"
        }
    }
}
